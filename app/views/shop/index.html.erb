<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Your Local Marketplace</h1>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Store</th>
      <th>Description</th>
      <th>Address</th>
      </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= image_tag(store.image_url) %></td>
        <td><%= store.title %></td>
        <td><%= store.description %></td>
        <td><%= store.address %></td>
        <td><%= link_to 'Select', store %></td>
       </tr>
    <% end %>
  </tbody>
</table>

