<!--This view is rendered for the welcome action on the Pages controller-->
<body>
  <div class="hero-unit">
    <!--<h1>Ebrickandmortar</h1>-->
      <h2>Shop your local stores online</h2>
  <fieldset>
<%= form_tag stores_path, class: "form-search", :method => 'get' do %>
  <div>
    <%= label_tag "Please enter your zip code" %>
    <%= text_field_tag :search, params[:search], placeholder: "e.g., 60616" %>
    </div>
   <div>
    <%= label_tag "Search for products (optional)" %>
    <%= text_field_tag :search, params[:search], placeholder: "e.g., Mizuno Wave" %>
    </div>
</br>
<div>
    <%= submit_tag "Search!", :name => nil, class: 'btn btn-large btn-block btn-primary' %>
  </div>
  <% end %>
  </fieldset>



<%= form_tag stores_path, method: :get do %>
  <p>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>


</body>
