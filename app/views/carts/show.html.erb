<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<!-- START_HIGHLIGHT -->
<h2>Your Cart</h2>
<table class="table">
<thead>
    <tr>
      <th></th>
      <th>Quantity</th>
      <th>Name</th>
      <th>Total Price</th>
      <th>Mens or Womens</th>
      <th>Color</th>
      <th>Size</th>
      <th>Width</th>
    </tr>
  </thead>
<!-- END_HIGHLIGHT -->
  <% @cart.line_items.each do |item| %>
    <tr>
      <td><%= image_tag(item.shoe.image_url) %></td>
      <td><%= item.quantity %>&times;</td>
      <td><%= item.shoe.title %></td>
      <td><%= number_to_currency(item.total_price) %></td>
      <td><%= item.shoe.sex %></td>
      <td><%= item.shoe.color %></td>
      <td><%= item.shoe.size %></td>
      <td><%= item.shoe.width %></td>
    </tr>
  <% end %>

  <tr>
    <td>Total</td>
    <td><strong><%= number_to_currency(@cart.total_price) %></strong></td>
<td>
<%= form_tag charges_path do %>
 
  <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
          data-key="pk_test_xnq5nucYpEcGXsJsm9FaVkfs"
          data-description=""
          data-amount=""></script>
<% end %>
</td>
</tr>
</table>

<%= button_to 'Empty cart', @cart, method: :delete,
    data: { confirm: 'Are you sure?' } %>
<%= link_to "Back", store_path(params[:id]), method: :get %>
