<% if notice %>
<div class="alert alert-success"><%= notice %></div>
<% end %>

<%= button_to 'Add to Cart', line_items_path(shoe_id: @shoe)%>

<div class="row">
<div class="span6">

<p>
 <%= @shoe.description %>
</p>

</div>
<div class="span6">
<p>
 <%= image_tag(@shoe.image_url) %>
</p>
<p>
 <strong><%= @shoe.title %></strong>
</p>
<p>
  <strong>Price:</strong>
  $<%= @shoe.price %>
</p>

<p>
  <strong>Store:</strong>
  <%= @store.title %>
</p>
</div>
</div>

<h3>Customize your shoe</h3>
<%= form_for([@store, @shoe]) do |f| %>  
  
<div class="field">
  <%= f.label :sex %><br>
  <%= f.select :sex, [['Mens', 'Mens'], ['Womens', 'Womens']] %>
</div>
<div class="field">
  <%= f.label :color %><br>
  <%= f.select :color, [['Blue', 'Blue'], ['Green', 'Green']] %>
</div> 
<div class="field">
  <%= f.label :size %><br>
  <%= f.select :size, [[1], [1.5], [2]] %>
</div>
  <div class="field">
    <%= f.label :width %><br>
    <%= f.select :width, [['D', 'D'], ['F', 'F']] %>
  </div>
<div class="actions">
    <%= f.submit %>
  </div>
<% end %> 
