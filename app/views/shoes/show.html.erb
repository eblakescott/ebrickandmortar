<p>
 <strong><%= @shoe.title %></strong>
</p>

<p>
 <%= @shoe.description %>
</p>

<p>
 <%= image_tag(@shoe.image_url) %>
</p>

<p>
  <strong>Price:</strong>
  $<%= @shoe.price %>
</p>

<p>
  <strong>Store:</strong>
  <%= @store.title %>
</p>

<%= form_for([@store, @shoe]) do |f| %>  

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :sex %><br>
    <%= f.select :sex, [['male', 1], ['female', 2]] %>
  </div>

  <% end %>


<%= button_to 'Add to Cart', line_items_path(shoe_id: @shoe)%>
